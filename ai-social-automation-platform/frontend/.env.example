# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_APP_NAME=AI Social Automation Platform
VITE_APP_VERSION=1.0.0

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_REFRESH_TOKEN_EXPIRY=7d

# External Services
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_BILLING=true
VITE_ENABLE_NOTIFICATIONS=true

# App Settings
VITE_MAX_PLATFORMS=5
VITE_MAX_POSTS_PER_DAY=10
VITE_DEFAULT_TIMEZONE=Asia/Kolkata


# ============================================================================
# VelocityPost.ai - Frontend Environment Variables
# ============================================================================
# IMPORTANT: Never commit this file to version control!
# Add .env.local to your .gitignore file

# Application URLs
REACT_APP_API_URL=http://localhost:5000
REACT_APP_FRONTEND_URL=http://localhost:3000

# ============================================================================
# OAuth Configuration - Replace with your actual values
# ============================================================================

# Facebook OAuth (https://developers.facebook.com/)
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id_here
# Example: REACT_APP_FACEBOOK_APP_ID=1234567890123456

# Instagram OAuth (https://developers.facebook.com/docs/instagram-basic-display-api)
REACT_APP_INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
# Example: REACT_APP_INSTAGRAM_CLIENT_ID=1234567890123456

# Twitter OAuth v2 (https://developer.twitter.com/)
REACT_APP_TWITTER_CLIENT_ID=your_twitter_client_id_here
# Example: REACT_APP_TWITTER_CLIENT_ID=abcdefghijklmnopqrstuvwxyz

# LinkedIn OAuth (https://www.linkedin.com/developers/)
REACT_APP_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
# Example: REACT_APP_LINKEDIN_CLIENT_ID=86abcdefghij1234

# Google/YouTube OAuth (https://console.developers.google.com/)
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here
# Example: REACT_APP_GOOGLE_CLIENT_ID=123456789012-abcdefghijklmnopqrstuvwxyz123456.apps.googleusercontent.com

# TikTok OAuth (https://developers.tiktok.com/)
REACT_APP_TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
# Example: REACT_APP_TIKTOK_CLIENT_KEY=aw1234567890abcdef

# ============================================================================
# Application Settings
# ============================================================================

# Environment
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_AUTOMATION=true
REACT_APP_ENABLE_BILLING=true

# Debug Settings
REACT_APP_DEBUG_OAUTH=false
REACT_APP_LOG_LEVEL=info

# ============================================================================
# Analytics & Tracking (Optional)
# ============================================================================

# Google Analytics
# REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX-X

# Mixpanel
# REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry Error Tracking
# REACT_APP_SENTRY_DSN=your_sentry_dsn

# ============================================================================
# Third-party Services (Optional)
# ============================================================================

# Stripe (for billing)
# REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Intercom (for customer support)
# REACT_APP_INTERCOM_APP_ID=your_intercom_app_id

# ============================================================================
# SETUP INSTRUCTIONS
# ============================================================================

# 1. FACEBOOK/INSTAGRAM SETUP:
#    - Go to https://developers.facebook.com/
#    - Create a new app or use existing
#    - Add Facebook Login product
#    - Add Instagram Basic Display product
#    - Set redirect URI: http://localhost:3000/auth/callback/facebook
#    - Copy App ID to REACT_APP_FACEBOOK_APP_ID

# 2. TWITTER SETUP:
#    - Go to https://developer.twitter.com/
#    - Create a new project/app
#    - Enable OAuth 2.0
#    - Set callback URL: http://localhost:3000/auth/callback/twitter
#    - Copy Client ID to REACT_APP_TWITTER_CLIENT_ID

# 3. LINKEDIN SETUP:
#    - Go to https://www.linkedin.com/developers/
#    - Create a new app
#    - Add Sign In with LinkedIn product
#    - Set redirect URL: http://localhost:3000/auth/callback/linkedin
#    - Copy Client ID to REACT_APP_LINKEDIN_CLIENT_ID

# 4. GOOGLE/YOUTUBE SETUP:
#    - Go to https://console.developers.google.com/
#    - Create a new project or select existing
#    - Enable YouTube Data API v3
#    - Create OAuth 2.0 credentials
#    - Set redirect URI: http://localhost:3000/auth/callback/youtube
#    - Copy Client ID to REACT_APP_GOOGLE_CLIENT_ID

# 5. TIKTOK SETUP:
#    - Go to https://developers.tiktok.com/
#    - Register for TikTok for Business
#    - Create a new app
#    - Set redirect URL: http://localhost:3000/auth/callback/tiktok
#    - Copy Client Key to REACT_APP_TIKTOK_CLIENT_KEY

# ============================================================================
# PRODUCTION DEPLOYMENT NOTES
# ============================================================================

# For production deployment:
# 1. Update REACT_APP_FRONTEND_URL to your production domain
# 2. Update REACT_APP_API_URL to your production API endpoint
# 3. Update all OAuth redirect URIs in platform developer consoles
# 4. Use production OAuth app credentials
# 5. Enable HTTPS for all OAuth callbacks
# 6. Set REACT_APP_ENVIRONMENT=production

# Example production URLs:
# REACT_APP_FRONTEND_URL=https://app.velocitypost.ai
# REACT_APP_API_URL=https://api.velocitypost.ai