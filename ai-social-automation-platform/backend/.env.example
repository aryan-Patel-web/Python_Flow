# ==============================================
# VelocityPost.ai - Environment Variables
# Copy to .env and fill with your API keys
# ==============================================

# Flask Application
SECRET_KEY=your-super-secret-key-change-in-production-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
FLASK_ENV=development
DEBUG=True

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB (Local)
MONGODB_URI=mongodb://localhost:27017/velocitypost

# MongoDB Atlas (Production - Recommended)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/velocitypost?retryWrites=true&w=majority

# Redis (Background Tasks & Caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# AI SERVICES (CONTENT GENERATION)
# ==============================================

# Mistral AI (Primary - Get from: https://console.mistral.ai/)
MISTRAL_API_KEY=your-mistral-api-key-here

# Groq Cloud (Fallback - Get from: https://console.groq.com/)
GROQ_API_KEY=your-groq-api-key-here

# OpenAI (Optional - Get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key-here

# ==============================================
# SOCIAL MEDIA APIS - OAUTH CREDENTIALS
# ==============================================

# Facebook/Instagram (Get from: https://developers.facebook.com/)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Twitter/X (Get from: https://developer.twitter.com/)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# LinkedIn (Get from: https://developer.linkedin.com/)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Google/YouTube (Get from: https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_API_KEY=your-google-api-key

# TikTok (Get from: https://developers.tiktok.com/)
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Pinterest (Get from: https://developers.pinterest.com/)
PINTEREST_CLIENT_ID=your-pinterest-client-id
PINTEREST_CLIENT_SECRET=your-pinterest-client-secret

# ==============================================
# PAYMENT PROCESSING
# ==============================================

# Stripe (International - Get from: https://stripe.com/docs/keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (Create in Stripe Dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_AGENCY_MONTHLY=price_agency_monthly_id

# Razorpay (India - UPI/Cards - Get from: https://razorpay.com/)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Razorpay Plan IDs (Create in Razorpay Dashboard)
RAZORPAY_PLAN_PRO_MONTHLY=plan_pro_monthly_id
RAZORPAY_PLAN_AGENCY_MONTHLY=plan_agency_monthly_id

# ==============================================
# EMAIL SERVICES
# ==============================================

# SMTP Configuration (for password reset, notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@velocitypost.ai

# SendGrid (Alternative - Get from: https://sendgrid.com/)
# SENDGRID_API_KEY=your-sendgrid-api-key

# ==============================================
# CONTENT & MEDIA SERVICES
# ==============================================

# Image Generation
DALL_E_API_KEY=your-dalle-api-key
STABILITY_API_KEY=your-stability-ai-api-key

# News APIs (for content research)
NEWS_API_KEY=your-newsapi-key

# Unsplash (for stock images)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Sentry (Error Tracking - Get from: https://sentry.io/)
SENTRY_DSN=your-sentry-dsn-url

# Google Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# ==============================================
# SECURITY & RATE LIMITING
# ==============================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# CORS Origins (Production)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==============================================
# CELERY CONFIGURATION (Background Tasks)
# ==============================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==============================================
# LOGGING & DEBUG
# ==============================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Features
ENABLE_DEBUG_TOOLBAR=True
ENABLE_PROFILING=False

# ==============================================
# AUTOMATION SETTINGS
# ==============================================

# Default posting limits (can be overridden per plan)
DEFAULT_MAX_PLATFORMS=2
DEFAULT_MAX_POSTS_PER_DAY=2
DEFAULT_CONTENT_GENERATION_LIMIT=10

# Content moderation
ENABLE_CONTENT_MODERATION=True
CONTENT_MODERATION_THRESHOLD=0.8

# ==============================================
# FILE STORAGE
# ==============================================

# Local Storage
UPLOAD_FOLDER=./storage/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# AWS S3 (Production - Optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=velocitypost-storage
# AWS_S3_REGION=us-east-1

# ==============================================
# SOCIAL MEDIA PLATFORM LIMITS
# ==============================================

# API Rate Limits (requests per hour)
FACEBOOK_RATE_LIMIT=200
INSTAGRAM_RATE_LIMIT=200
TWITTER_RATE_LIMIT=300
LINKEDIN_RATE_LIMIT=100
YOUTUBE_RATE_LIMIT=100

# Content Limits
MAX_TWEET_LENGTH=280
MAX_FACEBOOK_POST_LENGTH=63206
MAX_INSTAGRAM_CAPTION_LENGTH=2200
MAX_LINKEDIN_POST_LENGTH=3000

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Test Database (for running tests)
MONGODB_TEST_URI=mongodb://localhost:27017/velocitypost_test

# Test API Keys (use sandbox/test keys)
STRIPE_TEST_MODE=True
RAZORPAY_TEST_MODE=True

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================

# When deploying to production, set these:
# FLASK_ENV=production
# DEBUG=False
# MONGODB_URI=your-production-mongodb-atlas-url
# Use production API keys instead of test keys
# Set proper CORS_ORIGINS
# Configure proper email settings
# Set up monitoring with Sentry

# ==============================================
# ADDITIONAL NOTES
# ==============================================

# 1. Never commit this file with real API keys
# 2. Use strong, unique SECRET_KEY in production
# 3. Enable 2FA on all service accounts
# 4. Regularly rotate API keys
# 5. Use environment-specific configurations
# 6. Monitor API usage and billing
# 7. Set up proper logging in production
# 8. Use SSL certificates in production
# 9. Configure firewall rules
# 10. Set up automated backups